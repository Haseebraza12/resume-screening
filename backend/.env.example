# Environment Configuration
ENVIRONMENT=development

# API Settings
API_V1_PREFIX=/api/v1
PROJECT_NAME=ResumeMatch AI
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/resumematch

# Hugging Face
HUGGINGFACEHUB_API_TOKEN=your-huggingface-token-here

# Vector Store (choose one)
VECTOR_STORE=faiss  # Options: faiss, pinecone, weaviate
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=resumematch

# Redis (for caching)
REDIS_URL=redis://localhost:6379/0

# CORS Origins
CORS_ORIGINS=["http://localhost:3000","http://192.168.100.160:3000"]

# File Upload
MAX_FILE_SIZE_MB=10
UPLOAD_DIR=./uploads
